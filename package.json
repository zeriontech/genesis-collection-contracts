{
  "name": "genesis-collection-nft",
  "version": "1.0.0-rc",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile": "npx hardhat compile",
    "deploy:development": "npx hardhat run scripts/deploy.js --network development",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "verify:mainnet": "npx hardhat verify --network mainnet",
    "deploy:rinkeby": "npx hardhat run scripts/deploy.js --network rinkeby",
    "verify:rinkeby": "npx hardhat verify --network rinkeby",
    "test": "npx hardhat test --show-stack-traces",
    "coverage": "npx hardhat coverage --network hardhat",
    "lint:solhint": "npx solhint \"contracts/**/*.sol\"",
    "lint:eslint": "eslint .",
    "lint": "npm run lint:solhint && npm run lint:eslint"
  },
  "lint-staged": {
    ".": "npx prettier --write",
    "test/**/*.js": "npx eslint --fix",
    "migrations_scripts/*.js": "npx eslint --fix"
  },
  "author": "Igor Sobolev",
  "license": "MIT",
  "repository": "https://github.com/zeriontech/genesis-collection-nft",
  "dependencies": {
    "@openzeppelin/contracts": "4.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "@babel/register": "7.14.5",
    "@codechecks/client": "0.1.11",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-etherscan": "2.1.4",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@types/chai": "4.2.21",
    "@types/mocha": "8.2.3",
    "@types/node": "16.3.2",
    "@types/regenerator-runtime": "^0.13.1",
    "chai": "4.3.4",
    "core-js": "3.15.2",
    "dotenv": "10.0.0",
    "eslint": "7.30.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.23.4",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.4.1",
    "ganache-cli": "6.12.2",
    "hardhat": "2.4.3",
    "hardhat-docgen": "1.1.1",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-tracer": "1.0.0-alpha.6",
    "husky": "7.0.1",
    "lint-staged": "11.0.1",
    "mrm": "3.0.2",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.15",
    "regenerator-runtime": "0.13.7",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.16",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  }
}
